<%= nav_bar responsive: true do %>
  <a class="navbar-brand" href="/">
    <%= image_tag "fair-pay1-logo.png", class: "logo-image", alt: "FairPay" %>
  </a>
  <%= menu_group pull: :right do %>
    <li class="active">
      <%= content_tag :a, "Sign Up", href: "#signup-modal", class: 'btn', data: {toggle: 'modal'} %>
    </li>
    <li class="active">
      <%= content_tag :a, "Log In", href: "#signup-modal", class: 'btn', data: {toggle: 'modal'} %>
    </li>
  <% end %>
<% end %>

<%= modal_dialog id: "signup-modal",
         header: { show_close: true, dismiss: 'modal', title: 'Modal header' },
         body:   { content: 'This is the body' },
         footer: { content: content_tag(:button, 'Save', class: 'btn') } %>
